{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/src/Lily/Lily.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Lily/Lily.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/Lily/Lily.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "docker-build",
            "command": "docker",
            "type": "process",
            "args": [
                "build",
                "-t",
                "lily",
                "${workspaceFolder}"
            ]
        },
        {
            "label": "docker-run",
            "command": "docker",
            "type": "process",
            "args": [
                "run",
                "--name",
                "lily",
                "-d",
                "lily"
            ]
        }
    ]
}